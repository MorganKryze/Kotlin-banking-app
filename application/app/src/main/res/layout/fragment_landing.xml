<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageLanding"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/landing"
        android:contentDescription="@string/landing_image_description"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/landing_text"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonGoToAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_auth" />
</LinearLayout>